APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8000
# Docker: общая БД для api и bot (уже задано в docker-compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/botdb
# Локальный запуск бота при API в Docker: раскомментируйте и укажите вместо строки выше
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/botdb
JWT_SECRET=change-me
JWT_EXPIRES_MINUTES=480
CSRF_SECRET=dev-csrf
BOT_TOKEN=replace-with-telegram-bot-token
# Username менеджера без @ (для кнопки "Написать менеджеру")
MANAGER_USERNAME=manager_username
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=change-me
UPLOAD_DIR=./uploads
# Публичный URL загрузок при локальном хранении (бот отправляет медиа по этой ссылке)
UPLOAD_BASE_URL=http://localhost:8000/uploads
# Обязательно для бота в Docker: Telegram не может скачать файл по localhost. Укажите origin (схема + хост:порт без пути):
# при загрузке через API (порт 8000): http://ВАШ_IP:8000
# при загрузке в MinIO (порт 9000): http://ВАШ_IP:9000
# UPLOAD_PUBLIC_BASE_URL=http://192.168.1.100:8000
MAX_UPLOAD_MB=5
# MinIO (S3-совместимое хранилище в docker-compose). Для развёртывания S3 раскомментируйте и задайте.
# MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD=minioadmin
# S3_PUBLIC_BASE_URL — должен быть доступен извне (не localhost), иначе медиа в боте не откроются
# S3_PUBLIC_BASE_URL=http://localhost:9000/uploads
TIMEZONE=Europe/Moscow
ALLOWED_ORIGINS=http://localhost:5173
